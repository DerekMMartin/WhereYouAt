<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WhereYouAt.views.Story"
             xmlns:local="clr-namespace:WhereYouAt">
  
    <ContentView.Content>
        <ScrollView Orientation="Horizontal" Padding="10" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="RowDef"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0" x:Name="Lay" Orientation="Horizontal"/>
            </Grid>
        </ScrollView>
  </ContentView.Content>
</ContentView>